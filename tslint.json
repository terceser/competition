{
  "$schema": "./schemas/tslint-schema.json",
  "rulesDirectory": ["node_modules/codelyzer"],
  "rules": {
    "arrow-return-shorthand": [true, "multiline"],
    "callable-types": true,
    "class-name": true,
    "comment-format": [true, "check-space", "check-lowercase", { "ignore-words": ["TODO"] }],
    "component-class-suffix": true,
    "cyclomatic-complexity": [true, 10],
    "deprecation": { "severity": "warn" },
    "directive-class-suffix": true,
    "forin": true,
    "import-blacklist": [true, "rxjs/Rx"],
    "interface-name": [false, "always-prefix"],
    "interface-over-type-literal": true,
    "jsdoc-format": [true, "check-multiline-start"],
    "label-position": true,
    "member-access": true,
    "member-ordering": [true, { "order": "fields-first" }],
    "new-parens": true,
    "newline-before-return": true,
    "no-any": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-boolean-literal-compare": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-empty-interface": true,
    "no-empty": false,
    "no-eval": true,
    "no-inferrable-types": false,
    "no-input-rename": true,
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-parameter-properties": false,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-unbound-method": [true, { "ignore-static": true, "whitelist": ["expect"] }],
    "no-unnecessary-initializer": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-use-before-declare": false,
    "no-var-keyword": true,
    "no-void-expression": true,
    "number-literal-format": true,
    "object-literal-sort-keys": false,
    "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
    "one-variable-per-declaration": true,
    "ordered-imports": true,
    "prefer-conditional-expression": true,
    "prefer-const": true,
    "prefer-method-signature": true,
    "prefer-object-spread": true,
    "prefer-readonly": true,
    "prefer-switch": true,
    "prefer-template": true,
    "radix": true,
    "switch-default": true,
    "triple-equals": [true, "allow-null-check"],
    "typedef": [true, "call-signature", "parameter", "member-variable-declaration", "property-declaration"],
    "unified-signatures": true,
    "use-host-property-decorator": true,
    "use-input-property-decorator": true,
    "use-isnan": true,
    "use-life-cycle-interface": true,
    "use-output-property-decorator": true,
    "use-pipe-transform-interface": true,
    "variable-name": false
  }
}
